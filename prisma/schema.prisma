generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal {
  id            String   @id @default(cuid())
  userId        String
  userEmail     String?  // âœ… NEW: store email for lookups
  imageUrl      String?
  mealType      String
  totalCalories Int
  totalProtein  Int
  totalCarbs    Int
  totalFats     Int
  healthTip     String?
  createdAt     DateTime @default(now())
  
  foods         Food[]

  @@map("meals")
}

model Food {
  id          String @id @default(cuid())
  mealId      String
  meal        Meal   @relation(fields: [mealId], references: [id], onDelete: Cascade)
  
  name        String
  portionSize String
  calories    Int
  protein     Int
  carbs       Int
  fats        Int
  confidence  String
  
  createdAt   DateTime @default(now())

  @@map("foods")
}

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  userEmail       String   @unique
  
  // Basic Info
  name            String?
  weight          Float?   // in kg
  height          Float?   // in cm
  age             Int?
  gender          String?  // male/female
  
  // Goals
  goal            String?  // lose/maintain/gain
  activityLevel   String?  // sedentary/light/moderate/active/veryActive
  
  // Calculated Targets
  targetCalories  Int?
  targetProtein   Int?
  targetCarbs     Int?
  targetFats      Int?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("user_profiles")
}